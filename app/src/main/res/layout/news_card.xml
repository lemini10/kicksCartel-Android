<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="300dp"
    tools:context=".CategoryBrowseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/rounded_corner_shape">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/black_to_white_gradient"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/guava"
                android:id="@+id/header_image_card"
                android:paddingTop="15dp"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Adidas"
            android:id="@+id/categorie_news_card"
            android:textColor="@color/material_dynamic_neutral50"
            android:textSize="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Expected Yeezy 350 Onyx Restock"
            android:id="@+id/title_news_card"
            android:textColor="@color/black"
            android:textSize="20dp"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>